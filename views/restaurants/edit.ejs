<% include ../partials/header %>
<div>
    <h1>Edit <%= restaurant.name %></h1>

    <form action="/restaurants/<%=restaurant._id %>?_method=PUT" method="POST">
        <div>
            <input type="text" name="restaurant[name]" value="<%= restaurant.name %>">
        </div>

        <div>
            <input type="text" name="restaurant[image]" value="<%= restaurant.image %>">
        </div>

        <div>
            <input type="text" name="restaurant[specialty]" value="<%= restaurant.specialty %>">
        </div>
        
        <div>
            <input type="text" name="restaurant[description]" value="<%= restaurant.description %>">
        </div>
        
        <button>Submit</button>
    </form>

    <a href="/restaurants">Go back</a>
</div>


<% include ../partials/footer %>